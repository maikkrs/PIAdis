@model ClientesModels
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="holder">
    <div class="form-group">
        <h2 class="formulario-titulo">Eliminar cliente</h2>

        <form asp-action="Eliminar" asp-controller="Clientes" method="post">
            <div class="formulario-campos botelim">
                <div class="formulario-campo">

                    <div class="alert alert-danger" role="alert">
                        ¿Desea eliminar al cliente: @Html.DisplayTextFor(m => m.Nombre) @Html.DisplayTextFor(m => m.ApellidoP)?
                    </div>
                </div>
                <div class="formulario-botones ">
                    <input type="number" id="eid" asp-for="Id" class="form-control" placeholder="ID" readonly style="width: 20%;">
                    <button type="submit" class="btn btn-guardar btn-primary">Eliminar</button>
                    <a asp-action="Listar" asp-controller="Clientes" class="btn btn-cancelar btn-danger">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

