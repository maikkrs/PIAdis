
@model List<Productos>
@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_LayoutSS.cshtml";
}

<h1>Productos</h1>

<head>
    <meta charset="UTF-8">
    <title>Inventario de productos</title>
    
</head>
<body>
    

    <h1>Productos casi agotados:</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model)
            {
                <tr class="gp">
                    <td class="id">@prod.Id</td>
                    <td class="nom">@prod.Nombre</td>
                    <td class="stock">@prod.Stock</td>
                </tr>
            }

            </tr>
        </tbody>
    </table>

    if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }

   

    <div id="borrar" class="formulario">
        <div class="formulario-contenedor">
            <h2 class="formulario-titulo">Eliminar producto</h2>
            <form method="post">
                <div class="formulario-campos">
                    <div class="formulario-campo">
                        <label for="idEr">ID:</label>
                        <input type="text" id="idEr" name="idr" value="Model.borrarProd.id" readonly>
                    </div>
                    <div class="formulario-campo">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombreEr" name="nombrer" value="Model.borrarProd.name" readonly>
                    </div>

                </div>
                <div class="formulario-botones">
                    <button type="submit" class="btn btn-borrar" runat="server" OnServerClick="BorrarProd">Confirmar</button>
                    <button type="button" class="btn btn-cancelar">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</body>
