@model Productos
@{
    ViewData["Title"] = "GuardarProd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GuardarProd</h1>

<div id="crear" class="formulario">
    <div class="formulario-contenedor">
        <h2 class="formulario-titulo">Agregar/Editar producto</h2>

        <form asp-action="Guardar" asp-controller="Productos" method="post">
            <div class="formulario-campos">
                <div class="formulario-campo">

                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" asp-for="Nombre" required>
                </div>
                <div class="formulario-campo">
                    <label for="desc">Descripción:</label>
                    <input type="text" id="desc" asp-for="Descripcion" required>
                </div>
                <div class="formulario-campo">
                    <label for="precio">Precio:</label>
                    <input type="number" id="precio" asp-for="Precio" required>
                </div>
                <div class="formulario-campo">
                    <label for="stock">Stock:</label>
                    <input type="number" id="stock" asp-for="Stock" required>
                </div>
            </div>
            <div class="formulario-botones">
                <label for="eid">ID:</label><br />
                <input id="eid" type="text" name="eid" readonly style="width: 10%;" />
                <button type="submit" class="btn btn-guardar">Guardar</button>
                <button type="button" class="btn btn-cancelar">Cancelar</button>
            </div>
        </form>
    </div>
</div>
