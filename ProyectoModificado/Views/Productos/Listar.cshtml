@model List<Productos>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Inventario de productos</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr class="gp">
                <td class="id">@prod.Id.ToString()</td>
                <td class="nom">@prod.Nombre</td>
                <td class="desc">@prod.Descripcion</td>
                <td class="precio">$@prod.Precio.ToString()</td>
                <td class="stock">@prod.Stock.ToString()</td>
                <td>
                    <a asp-action="Editar" asp-asp-controller="Productos" class="btn btn-editar" asp-route-idProducto="@prod.Id"><i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i></a>
                    <a asp-action="Eliminar" asp-asp-controller="Productos" class="btn btn-danger" asp-route-idProducto="@prod.Id"><i class="fa-solid fa-trash" style="color: #ffffff;"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
<a asp-action="Guardar" asp-asp-controller="Productos" class="btn btn-agregar">Agregar producto</a>
