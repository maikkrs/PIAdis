@model Usuario
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var x = Model.upass;
    var y = Model.upass2;
}
<div class="holder">
    <div class="form-group">
        <h2 class="formulario-titulo">Editar usuario</h2>

        <form asp-action="Editar" asp-controller="Usuarios" method="post">
            <div class="formulario-campos">
                <div class="formulario-campo">
                    <label for="desc">Usuario:</label>
                    <input type="text" id="desc" asp-for="umail" class="form-control" readonly required>
                </div>

                <div class="formulario-campo">
                    <label for="precio">Ingrese contraseña actual:</label>
                    <input type="password" id="precio" asp-for="upass2" class="form-control" placeholder="Ingresar contraseña" required>
                    <label for="precio" style="color:red;">@y</label>
                </div>
                <div class="formulario-campo">
                    <label for="precio">Ingrese contraseña nueva:</label>
                    <input type="password" id="precio" asp-for="upass" value="" class="form-control" minlength="8" placeholder="Ingresar contraseña" required>
 
                </div>
            </div>
            <div class="formulario-botones">
                <input type="number" id="eid" asp-for="uid" class="form-control" placeholder="ID" readonly style="width: 20%;">
                <button type="submit" asp-route-conActual="@x" class="btn btn-guardar btn-primary">Guardar</button>
                <a asp-action="Listar" asp-controller="Usuarios" class="btn btn-cancelar btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>
