@model Usuario
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="holder">
    <div class="form-group">
        <h2 class="formulario-titulo">Editar producto</h2>

        <form asp-action="Editar" asp-controller="Usuarios" method="post">
            <div class="formulario-campos">
                <div class="formulario-campo">
                    <label for="desc">Usuario:</label>
                    <input type="text" id="desc" asp-for="umail" class="form-control" placeholder="Ingresar descripción" required>
                </div>
                <div class="formulario-campo">
                    <label for="precio">Contraseña (mínimo 8 caracteres):</label>
                    <input type="password" id="precio" asp-for="upass" class="form-control" minlength="8" placeholder="Ingresar precio" required>
                    <i class="fa-sharp fa-solid fa-eye-slash" id="togglePassword" style="color: #464d58;"></i>
                </div>
            </div>
            <div class="formulario-botones">
                <input type="number" id="eid" asp-for="uid" class="form-control" placeholder="ID" readonly style="width: 20%;">
                <button type="submit" class="btn btn-guardar btn-primary">Guardar</button>
                <a asp-action="Listar" asp-controller="Usuarios" class="btn btn-cancelar btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>

